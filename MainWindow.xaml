                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Grid Background="DodgerBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="5">
            <Button Grid.Row="5" Content="Click me" Width="200" Height="40" Background="Gainsboro" Click="OnButtonClick"/>
        </Grid>
        <Grid Grid.Row="0" VerticalAlignment="Center">
            <TextBlock FontSize="48" TextAlignment="Center" Text="Who is here?" Foreground="AliceBlue">
            </TextBlock>
        </Grid>
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <TextBlock FontSize="36" x:Name="FirstPerson" TextAlignment="Center" Text="" Foreground="AliceBlue">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <ScaleTransform x:Name="SwitchScale0"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <TextBlock FontSize="36" x:Name="SecondPerson" TextAlignment="Center" Text="" Foreground="AliceBlue">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <ScaleTransform x:Name="SwitchScale1"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="3" VerticalAlignment="Center">
            <TextBlock FontSize="36" x:Name="ThirdPerson" TextAlignment="Center" Text="" Foreground="AliceBlue">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <ScaleTransform x:Name="SwitchScale2"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="4" VerticalAlignment="Center">
            <TextBlock FontSize="36" x:Name="FourthPerson" TextAlignment="Center" Text="" Foreground="AliceBlue">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <ScaleTransform x:Name="SwitchScale3"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
